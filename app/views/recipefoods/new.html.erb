<section class="flex flex-col items-center w-full bg-slate-200 min-h-screen">
  <%= render partial:'partials/navbar', locals: {page_title: 'New Recipe Food', user: @user} %>

  <h1 class="w-full text-center text-5xl font-bold text-slate-600 mt-4">Add food to <%= @recipe.name %></h1>
  <%= form_with model: @recipefoods, url: recipe_recipefoods_path, method: :post, local: true, class: 'flex flex-col w-full max-w-lg items-center gap-4 mt-4', scope: :recipefood do |f| %>

    <div class="flex gap-4 flex-wrap">
      <% @foods.each do |food| %>
        <div class="flex gap-1 items-center">
          <%= f.radio_button :foods_id, food.id %><%= food.name %>
        </div>
      <% end %>
    </div>

    <%= f.number_field :quantity, min: 1, autofocus: true, placeholder: 'Quantity', class: "bg-slate-100 focus:ring-transparent focus:border-gray-800 border-gray-800 rounded-md w-1/4" %>

    <%= f.submit "Add Food", class:'bg-slate-600 text-slate-200 rounded-lg p-2 w-1/3 mt-4' %>
  <% end %>
</section>