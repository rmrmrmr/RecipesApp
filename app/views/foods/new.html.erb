<%= render partial:'partials/navbar', locals: {page_title: 'Foods List', user: @user} %>
<%= stylesheet_link_tag 'style' %>

<h1 class="page-title">Add New Food</h1>

<%= form_with model: @food, url: foods_path, class: "food-form" do |form| %>
  <div class="form-field">
    <%= form.label :name %>
    <%= form.text_field :name, class: "input-field" %>
  </div>

  <div class="form-field">
    <%= form.label :measurement_unit %>
    <%= form.text_field :measurement_unit, class: "input-field" %>
  </div>

  <div class="form-field">
    <%= form.label :price %>
    <%= form.text_field :price, class: "input-field" %>
  </div>

  <div class="form-field">
    <%= form.label :quantity %>
    <%= form.text_field :quantity, class: "input-field" %>
  </div>

  <div class="form-actions">
    <%= form.submit "Add Food", class: "btn btn-primary" %>
  </div>
<% end %>