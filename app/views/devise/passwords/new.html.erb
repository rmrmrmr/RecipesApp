<section class="w-full flex flex-col items-center py-10">
  <h2 class="text-4xl mb-5">Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <% f.options[:html][:class] += ' flex flex-col items-center gap-4 px-0 mb-4' %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="border-2 border-black py-2 w-72 text-center">
      <%= f.submit "Send me reset password instructions" %>
    </div>
  <% end %>

  <div class="border-2 border-black py-2 w-48 text-center mb-4">
    <%= link_to "Log in", new_session_path(resource_name) %><br />
  </div>

  <div class="border-2 border-black py-2 w-48 text-center mb-4">
    <%= link_to "Sign up", new_registration_path(resource_name) %><br />
  </div>

</section>