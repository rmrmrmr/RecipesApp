<section class="flex flex-col items-center w-full bg-slate-200 min-h-screen">
  <%= render partial:'partials/navbar', locals: {page_title: 'New Recipe', user: @user} %>

  <%= form_with model: @recipe, url: recipes_path, method: :post, local: true, class: 'flex flex-col w-full max-w-lg items-center gap-4 mt-12', scope: :recipe do |f| %>
    <%= f.text_field :name, autofocus: true, class:"focus:ring-transparent focus:border-gray-800 border-gray-800 rounded-md w-full bg-slate-100", placeholder: "Recipe Name" %>
    <%= f.number_field :preparation_time, autofocus: true, min: 1, class:"focus:ring-transparent focus:border-gray-800 border-gray-800 rounded-md w-full bg-slate-100", placeholder: "Preparation Time (minutes)" %>
    <%= f.number_field :cooking_time, autofocus: true,  min: 1, class:"focus:ring-transparent focus:border-gray-800 border-gray-800 rounded-md w-full bg-slate-100", placeholder: "Cooking Time (minutes)" %>
    <%= f.text_area :description, autofocus: true, class:"focus:ring-transparent focus:border-gray-800 border-gray-800 rounded-md h-[100px] w-full resize-none bg-slate-100", placeholder: "Description" %>
    <%= f.submit "Create Recipe", class:'bg-slate-600 text-slate-200 rounded-lg p-2 w-1/3' %>
  <% end %>
</section>